<!-- Start BEst Seller Area -->
<section class="wn__recent__post style-two ptb--80">
    <div class="container">

        <center>
        {% for  message in  app.session.flashBag.get('succes') %}
            <div class="alert alert-success col-lg-6 ">
                {{ message }}
            </div>
        {% endfor %}
        </center>
        <br>
        <div class="row">
            <div class="col-lg-12">
                <div class="section__title text-center">
                    <h2 class="title__be--2">New Books <span class="color--theme">  For Sale</span></h2>
                    <p>welcome, choose the book you like from us and buy it now. </p>
                </div>
            </div>
        </div>
        <!-- Start Single Tab Content -->
        <div class="furniture--4 border--round arrows_style owl-carousel owl-theme mt--50">
            {% for produit in produitsforsale %}
            <!-- Start Single Product -->
            <div class="product product__style--3">
                <div class="product__thumb">
                    <a class="first__img" href="{{ path('details',{'id':produit.id}) }}">
                        <img src="{{ asset(produit.path) }}" alt="product image"></a>
                    <a class="second__img animation1" href="{{ path('details',{'id':produit.id}) }}">
                        <img src="{{ asset(produit.path) }}" alt="product image"></a>
                </div>
                <div class="product__content content--center">
                    <h4><a href="{{ path('details',{'id':produit.id}) }}">{{ produit.name }}"</a></h4>
                    <ul class="price d-flex">
                        <li>{{ produit.price }} DT</li>
                    </ul>
                    <div class="action">
                        <div class="actions_inner">
                            <ul class="add_to_links">
                                <li><a class="cart" href=""><i class="bi bi-shopping-bag4"></i></a>
                                </li>
                                <li><a data-toggle="modal" title="Quick View" class="quickview modal-view detail-link" href="{{ path('details',{'id':produit.id}) }}">
                                        <i class="bi bi-search"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    </div>
</section>

