{% extends 'base.html.twig' %}

{% block title %}Product Admin{% endblock %}

    {% block body %}
        <div class="ht__breadcrumb__area bg-image--6" style="background-image: url('{{asset('assets/images/bg/6.jpg')}}')">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__inner text-center">
                            <h2 class="breadcrumb-title">Produit </h2>
                            <nav class="breadcrumb-content">
                                <a class="breadcrumb_item" href="{{ path('shopgrid') }}">Product </a>
                                <span class="brd-separator">/</span>
                                <span class="breadcrumb_item active">Add</span>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <br><br>
        <div class="container">
            <h1>Create New Product</h1>
            {{ form_start(form) }}
            <div class="row">
                <div class="col col-lg-8">
                    {{ form_row(form.name) }}
                </div>
                <div class="col col-lg-4">
                    {{ form_row(form.price) }}
                </div>
            </div>
                {{ form_row(form.description) }}
                {{ form_row(form.category) }}
            <div class="row justify-content-md-center">
                <div class="col col-lg-3">
                    {{ form_row(form.image) }}
                </div>
                <div class="col col-lg-3">
                    {{ form_row(form.image2) }}
                </div>
            </div>
        </div>
        <br>
    {% endblock %}
